<?xml version="1.0" encoding="utf-8"?>
<!--XML implementation of Card Layout-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20sp"
    android:gravity="center"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10sp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/S_color"
            android:background="@drawable/buttonborder2"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/T_no"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#A81D2D"
                android:layout_centerHorizontal="true"
                android:textSize="23sp" />
            <ImageView
                android:id="@+id/T_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="-15dp"
                android:layout_below="@+id/T_no"
                android:layout_centerInParent="true"
                android:src="@drawable/t" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/green"
                android:id="@+id/T_state"
                android:layout_below="@id/T_image"
                android:layout_marginTop="-5dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>